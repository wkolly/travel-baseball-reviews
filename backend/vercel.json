{
  "version": 2,
  "builds": [
    {
      "src": "api/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/login(.*)",
      "dest": "api/login.ts"
    },
    {
      "src": "/api/register(.*)", 
      "dest": "api/register.ts"
    },
    {
      "src": "/api/auth(.*)",
      "dest": "api/auth.ts"
    },
    {
      "src": "/api/teams(.*)",
      "dest": "api/teams.ts"
    },
    {
      "src": "/api/tournaments(.*)",
      "dest": "api/tournaments.ts"
    },
    {
      "src": "/api/reviews(.*)",
      "dest": "api/reviews.ts"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ]
}